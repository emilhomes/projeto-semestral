<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #ECF0F1;" 
            xmlns="http://javafx.com/javafx/25" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.EditarPerfilCoordenadorController">

    <content>
        <VBox alignment="TOP_LEFT" prefHeight="600.0" prefWidth="900.0" spacing="25" style="-fx-background-color: #ECF0F1;">
            
            <padding>
                <Insets bottom="40" left="40" right="40" top="40" />
            </padding>

            <children>
                <VBox spacing="5">
                    <Label text="Editar Dados do Coordenador" textFill="#0f1d45">
                        <font>
                            <Font name="Ebrima Bold" size="26.0" />
                        </font>
                    </Label>
                    <Label text="Mantenha seus dados cadastrais e de contato atualizados." textFill="#7f8c8d">
                        <font>
                            <Font name="Ebrima" size="14.0" />
                        </font>
                    </Label>
                </VBox>

                <VBox spacing="20" style="-fx-background-color: white; -fx-background-radius: 10; -fx-padding: 40; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.1), 5, 0, 0, 1);">
                    
                    <VBox spacing="8">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Nome Completo">
                            <font><Font name="Ebrima" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="campoNome" prefHeight="45" promptText="Digite seu nome completo" style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5;" />
                    </VBox>

                    <VBox spacing="8">
                        <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="E-mail Institucional">
                            <font><Font name="Ebrima" size="14.0"/></font>
                        </Label>
                        <TextField fx:id="campoEmail" prefHeight="45" promptText="exemplo@uern.br" style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5;" />
                    </VBox>

                    <HBox spacing="30">
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Matrícula / SIAPE">
                                <font><Font name="Ebrima" size="14.0"/></font>
                            </Label>
                            <TextField fx:id="campoMatricula" prefHeight="45" promptText="Digite sua matrícula" style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5;" />
                        </VBox>
                        
                        <VBox spacing="8" HBox.hgrow="ALWAYS">
                            <Label style="-fx-font-weight: bold; -fx-text-fill: #2C3E50;" text="Departamento">
                                <font><Font name="Ebrima" size="14.0"/></font>
                            </Label>
                            <TextField fx:id="campoDepartamento" prefHeight="45" promptText="Ex: Computação" style="-fx-background-radius: 5; -fx-border-color: #BDC3C7; -fx-border-radius: 5;" />
                        </VBox>
                    </HBox>

                    <HBox alignment="CENTER_RIGHT" spacing="15">
                        <padding><Insets top="20"/></padding>
                        <children>
                            <Button onAction="#cancelar" 
                                    prefHeight="40" prefWidth="120" 
                                    style="-fx-background-color: #E74C3C; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" 
                                    text="Cancelar" />
                            
                            <Button onAction="#salvar" 
                                    prefHeight="40" prefWidth="180" 
                                    style="-fx-background-color: #0F1D45; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-cursor: hand;" 
                                    text="Salvar Alterações" />
                        </children>
                    </HBox>

                </VBox>
            </children>
        </VBox>
    </content>
</ScrollPane>