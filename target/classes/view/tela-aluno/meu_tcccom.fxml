<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<!-- DASHBOARD COMPLETO + TELA "MEU TCC (COM TCC)" -->
<BorderPane fx:id="root" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/13" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MeuTCCComController">

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="15" style="-fx-background-color: #2C3E50;">
            <children>
                <ImageView fitHeight="108.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo-gestao-tccs-e-monografias-branco.png" />
                    </image>
                </ImageView>

                <Button fx:id="btnPerfil" onAction="#abrirPerfil" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Perfil do Aluno" />
                <Button fx:id="btnMeuTCC" onAction="#abrirMeuTCC" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Meu TCC" />
                <Button fx:id="btnCronograma" onAction="#abrirCronograma" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Cronograma" />
            </children>
        </VBox>
    </left>

    <!-- ÁREA PRINCIPAL -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #ECF0F1;">
            <content>
                <VBox alignment="TOP_LEFT" spacing="20">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                    <children>
                        <Label text="Meu TCC" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

                        <Label text="Título: Desenvolvimento de um Sistema de Gestão de TCC" style="-fx-font-size: 16px;" />
                        <Label text="Orientador: Prof. João da Silva" style="-fx-font-size: 16px;" />
                        <Label text="Status: Em andamento" style="-fx-font-size: 16px;" />

                        <Separator />

                        <HBox spacing="15">
                            <children>
                                <Button fx:id="btnUpload" text="Enviar Arquivo" style="-fx-font-size: 14px; -fx-padding: 10 20; -fx-background-color: #2C3E50; -fx-text-fill: white; -fx-background-radius: 8;" />
                                <Button fx:id="btnVersoes" text="Ver Versões Enviadas" style="-fx-font-size: 14px; -fx-padding: 10 20; -fx-background-color: #1A252F; -fx-text-fill: white; -fx-background-radius: 8;" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>