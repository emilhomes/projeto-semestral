<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<!-- DASHBOARD COMPLETO + TELA "MEU TCC (SEM TCC)" -->
<BorderPane fx:id="root" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MeuTCCSemController">

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="15" style="-fx-background-color: #2C3E50;">
            <children>
                <ImageView fitHeight="108.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo-gestao-tccs-e-monografias-branco.png" />
                    </image>
                </ImageView>

                <Button fx:id="btnPerfil" onAction="#abrirPerfil" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Perfil do Aluno" />
                <Button fx:id="btnMeuTCC" onAction="#abrirMeuTCC" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Meu TCC" />
                <Button fx:id="btnCronograma" onAction="#abrirCronograma" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Cronograma" />
            </children>
        </VBox>
    </left>

    <!-- ÁREA PRINCIPAL -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #ECF0F1;">
            <children>
                <VBox alignment="CENTER" spacing="20">
                    <children>
                        <Label text="Você ainda não possui um TCC cadastrado." style="-fx-font-size: 20px; -fx-text-fill: #2C3E50; -fx-font-weight: bold;" />

                        <Button fx:id="btnCadastrarTCC" text="Cadastrar TCC" style="-fx-font-size: 14px; -fx-padding: 10 20; -fx-background-color: #2C3E50; -fx-text-fill: white; -fx-background-radius: 8;" />
                    </children>
                </VBox>
            </children>
        </StackPane>
    </center>

</BorderPane>
