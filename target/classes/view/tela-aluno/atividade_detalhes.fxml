<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="root" prefHeight="600.0" prefWidth="900.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.DetalhesAtividadeController">

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="15"
              style="-fx-background-color: #0F1D45;">
            <children>
                <ImageView fitHeight="108.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo-gestao-tccs-e-monografias-branco.png" />
                    </image>
                </ImageView>

                <Button fx:id="btnPerfil" onAction="#abrirPerfil" prefWidth="180"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="Perfil do Aluno" />

                <Button fx:id="btnMeuTCC" onAction="#abrirMeuTCC" prefWidth="180"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="Meu TCC" />

                <Button fx:id="btnCronograma" onAction="#abrirCronograma" prefWidth="180"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;"
                        text="Cronograma" />
            </children>
        </VBox>
    </left>

    <!-- ÁREA PRINCIPAL -->
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true" style="-fx-background-color: #ECF0F1;">
            <content>
                <VBox alignment="TOP_LEFT" spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    <children>

                        <!-- TÍTULO -->
                        <HBox alignment="CENTER_LEFT" spacing="15">
                            <children>
                                <Label text="Cronograma"
                                       style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #0F1D45;" />
                            </children>
                        </HBox>

                        <!-- CARD DA ATIVIDADE -->
                        <VBox spacing="10"
                              style="-fx-background-color: #FFFFFF; -fx-padding: 20; -fx-background-radius: 10; -fx-border-color: #BDC3C7; -fx-border-radius: 10;">
                            <children>

                                <Label text="Título: Entregar Introdução"
                                       style="-fx-font-size: 18px; -fx-font-weight: bold;" />

                                <Label text="Descrição:"
                                       style="-fx-font-size: 14px; -fx-font-weight: bold;" />

                                <Label wrapText="true"
                                       style="-fx-font-size: 14px;"
                                       text="Escrever e entregar a introdução do TCC para revisão do orientador." />

                                <Label text="Data limite: 20/11/2025"
                                       style="-fx-font-size: 14px;" />

                                <HBox alignment="CENTER_LEFT" spacing="10">
                                    <children>
                                        <Label text="Status:" style="-fx-font-size: 14px; -fx-font-weight: bold;" />
                                        <Label fx:id="labelStatus"
                                               text="Pendente"
                                               style="-fx-font-size: 14px; -fx-text-fill: #C0392B;" />
                                    </children>
                                </HBox>

                                <!-- BOTÕES DE STATUS -->
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <children>
                                        <Button fx:id="btnConcluir"
                                                style="-fx-background-color: #27AE60; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8;"
                                                text="Marcar como Concluída" />

                                        <Button fx:id="btnNaoConcluir"
                                                style="-fx-background-color: #E67E22; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8;"
                                                text="Marcar como Não Concluída" />
                                    </children>
                                </HBox>

                                <!-- CRUD: EDITAR / EXCLUIR -->
                                <HBox alignment="CENTER_LEFT" spacing="15">
                                    <children>

                                        <Button fx:id="btnEditarAtividade"
                                                style="-fx-background-color: #1E3A5F; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8;"
                                                text="Editar Atividade" />

                                        <Button fx:id="btnExcluirAtividade"
                                                style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-padding: 8 20; -fx-background-radius: 8;"
                                                text="Excluir Atividade" />

                                    </children>
                                </HBox>

                            </children>
                        </VBox>

                        <!-- ADICIONAR ATIVIDADE (novo lugar) -->
                        <Button fx:id="btnAdicionarAtividade"
                                style="-fx-font-size: 14px; -fx-padding: 10 20; -fx-background-color: #0F1D45; -fx-text-fill: white; -fx-background-radius: 8;"
                                text="Adicionar Atividade" />

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>

</BorderPane>
