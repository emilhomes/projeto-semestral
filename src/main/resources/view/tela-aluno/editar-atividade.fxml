<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controllers.EditarAtividadeController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #ECF0F1;">

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="20"
              style="-fx-background-color: #0F1D45;">
            <padding><Insets top="30" bottom="30"/></padding>

            <ImageView fitHeight="110" fitWidth="110" preserveRatio="true">
                <image><Image url="@logo-gestao-tccs-e-monografias-branco.png"/></image>
            </ImageView>

            <VBox spacing="12">

                <Button text="Perfil do Aluno" prefWidth="180"
                        onAction="#abrirPerfil"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />

                <Button text="Meu TCC" prefWidth="180"
                        onAction="#abrirMeuTCC"
                        style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" />

                <Button text="Cronograma" prefWidth="180"
                        onAction="#abrirCronograma"
                        style="-fx-background-color: #1E3A5F; -fx-text-fill: white; -fx-font-size: 14px;" />
            </VBox>
        </VBox>
    </left>

    <!-- CENTRO -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
            <content>
                <VBox spacing="25">
                    <padding><Insets left="30" right="30" top="30" bottom="30"/></padding>

                    <!-- TÍTULO -->
                    <Label text="Editar Atividade"
                           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #0F1D45;" />

                    <!-- CARD -->
                    <VBox spacing="15"
                          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25;">
                        <effect>
                            <DropShadow radius="12" color="#00000030" offsetY="3" />
                        </effect>

                        <!-- Título -->
                        <Label text="Título da Atividade"
                               style="-fx-font-size: 15px; -fx-font-weight: bold;" />

                        <TextField fx:id="campoTitulo"
                                   promptText="Digite o título atualizado"
                                   style="-fx-border-color: #BDC3C7; -fx-background-radius: 6; -fx-border-radius: 6;" />

                        <!-- Descrição -->
                        <Label text="Descrição"
                               style="-fx-font-size: 15px; -fx-font-weight: bold;" />

                        <TextArea fx:id="campoDescricao" prefHeight="130"
                                  wrapText="true"
                                  promptText="Descreva a atividade"
                                  style="-fx-border-color: #BDC3C7; -fx-background-radius: 6; -fx-border-radius: 6;" />

                        <!-- Data limite -->
                        <Label text="Data Limite"
                               style="-fx-font-size: 15px; -fx-font-weight: bold;" />

                        <DatePicker fx:id="campoDataLimite"
                                    style="-fx-border-color: #BDC3C7; -fx-background-radius: 6; -fx-border-radius: 6;" />

                        <!-- Status -->
                        <Label text="Status"
                               style="-fx-font-size: 15px; -fx-font-weight: bold;" />

                        <ComboBox fx:id="comboStatus"
                                  style="-fx-border-color: #BDC3C7; -fx-background-radius: 6; -fx-border-radius: 6;" />

                        <!-- BOTÕES -->
                        <HBox spacing="15" alignment="CENTER_RIGHT">
                            <padding><Insets top="10" bottom="10" right="10"/></padding>
                            <children>

                                <Button fx:id="btnSalvar"
                                        text="Salvar Alterações"
                                        style="-fx-background-color: #0F1D45; -fx-text-fill: white; -fx-font-weight: bold; 
                                               -fx-background-radius: 6; -fx-padding: 8 22;" />

                                <Button fx:id="btnCancelar"
                                        text="Cancelar"
                                        style="-fx-background-color: #C0392B; -fx-text-fill: white; -fx-font-weight: bold; 
                                               -fx-background-radius: 6; -fx-padding: 8 22;" />
                            </children>
                        </HBox>

                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>
