<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>

<!-- DASHBOARD COMPLETO + TELA "VERSÕES DO TCC" -->
<BorderPane fx:id="root" prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.VersoesTccController">

    <!-- SIDEBAR -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="15" style="-fx-background-color: #2C3E50;">
            <children>
                <ImageView fitHeight="108.0" fitWidth="102.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@logo-gestao-tccs-e-monografias-branco.png" />
                    </image>
                </ImageView>

                <Button fx:id="btnPerfil" onAction="#abrirPerfil" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Perfil do Aluno" />
                <Button fx:id="btnMeuTCC" onAction="#abrirMeuTCC" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Meu TCC" />
                <Button fx:id="btnCronograma" onAction="#abrirCronograma" prefWidth="180" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 14px;" text="Cronograma" />
            </children>
        </VBox>
    </left>

    <!-- ÁREA PRINCIPAL -->
    <center>
        <ScrollPane fitToWidth="true" fitToHeight="true" style="-fx-background-color: #ECF0F1;">
            <content>
                <VBox alignment="TOP_LEFT" spacing="20">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20" />
                    </padding>
                    <children>
                        <Label text="Versões do TCC" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2C3E50;" />

                        <Label text="Abaixo estão todas as versões enviadas do seu TCC:" style="-fx-font-size: 16px;" />

                        <TableView fx:id="tabelaVersoes" prefHeight="400">
                            <columns>
                                <TableColumn fx:id="colDataEnvio" text="Data de Envio" prefWidth="200" />
                                <TableColumn fx:id="colArquivo" text="Arquivo" prefWidth="300" />
                                <TableColumn fx:id="colAcao" text="Ações" prefWidth="150" />
                            </columns>
                        </TableView>

                    </children>
                </VBox>
            </content>
        </ScrollPane>
    </center>
</BorderPane>