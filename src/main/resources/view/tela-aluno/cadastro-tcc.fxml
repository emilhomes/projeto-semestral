<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.CadastrarTCCController"
            prefWidth="900" prefHeight="600"
            style="-fx-background-color: #ECF0F1;">

    <!-- SIDEBAR PADRÃO -->
    <left>
        <VBox alignment="TOP_CENTER" prefWidth="200" spacing="25"
              style="-fx-background-color: #0F1D45;">
            <padding><Insets top="35" bottom="35"/></padding>

            <ImageView fitHeight="110" fitWidth="110" preserveRatio="true">
                <image>
                    <Image url="@logo-gestao-tccs-e-monografias-branco.png"/>
                </image>
            </ImageView>

            <Button fx:id="btnPerfil" prefWidth="170"
                    text="Perfil do Aluno"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-family: 'Ebrima';"/>

            <Button fx:id="btnMeuTCC" prefWidth="170"
                    text="Meu TCC"
                    style="-fx-background-color: #142850; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-family: 'Ebrima';"/>

            <Button fx:id="btnCronograma" prefWidth="170"
                    text="Cronograma"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 15px; -fx-font-family: 'Ebrima';"/>
        </VBox>
    </left>

    <!-- ÁREA PRINCIPAL -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;">
            <content>

                <VBox alignment="TOP_CENTER" spacing="25">
                    <padding><Insets top="30" left="30" right="30" bottom="30"/></padding>

                    <!-- CARD CENTRAL -->
                    <VBox spacing="25"
                          prefWidth="600"
                          style="-fx-background-color: white;
                                 -fx-background-radius: 15;
                                 -fx-padding: 30;
                                 -fx-border-radius: 15;">
                        <effect>
                            <DropShadow color="#00000025" radius="15" offsetY="4"/>
                        </effect>

                        <Label text="Cadastrar TCC"
                               style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-font-family: 'Ebrima'; -fx-text-fill: #0F1D45;"/>

                        <!-- TÍTULO -->
                        <VBox spacing="5">
                            <Label text="Título do TCC"
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Ebrima';"/>

                            <TextField fx:id="campoTitulo"
                                       promptText="Digite o título do TCC"
                                       style="-fx-background-radius: 5;
                                              -fx-border-color: #BDC3C7;
                                              -fx-border-radius: 5;
                                              -fx-font-family: 'Ebrima';"/>
                        </VBox>

                        <!-- RESUMO -->
                        <VBox spacing="5">
                            <Label text="Resumo"
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Ebrima';"/>

                            <TextArea fx:id="campoResumo"
                                      promptText="Digite o resumo do TCC"
                                      wrapText="true"
                                      prefHeight="120"
                                      style="-fx-background-radius: 5;
                                             -fx-border-color: #BDC3C7;
                                             -fx-border-radius: 5;
                                             -fx-font-family: 'Ebrima';"/>
                        </VBox>

                        <!-- ORIENTADOR -->
                        <VBox spacing="5">
                            <Label text="Orientador"
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Ebrima';"/>

                            <ComboBox fx:id="campoOrientador"
                                      promptText="Selecione o orientador"
                                      style="-fx-background-radius: 5;
                                             -fx-border-color: #BDC3C7;
                                             -fx-border-radius: 5;
                                             -fx-font-family: 'Ebrima';"/>
                        </VBox>

                        <!-- ESTADO -->
                        <VBox spacing="5">
                            <Label text="Estado do TCC"
                                   style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-font-family: 'Ebrima';"/>

                            <ComboBox fx:id="campoEstado"
                                      promptText="Selecione o estado"
                                      style="-fx-background-radius: 5;
                                             -fx-border-color: #BDC3C7;
                                             -fx-border-radius: 5;
                                             -fx-font-family: 'Ebrima';"/>
                        </VBox>

                        <!-- BOTÃO CADASTRAR -->
                        <HBox alignment="CENTER_RIGHT">
                            <Button fx:id="btnCadastrarTCC"
                                    text="Cadastrar TCC"
                                    onAction="#CriarTCC"
                                    style="-fx-background-color: #0F1D45;
                                           -fx-text-fill: white;
                                           -fx-background-radius: 8;
                                           -fx-font-size: 16px;
                                           -fx-padding: 12 30;
                                           -fx-font-weight: bold;
                                           -fx-font-family: 'Ebrima';"/>
                        </HBox>

                    </VBox>

                </VBox>

            </content>
        </ScrollPane>
    </center>

</BorderPane>
