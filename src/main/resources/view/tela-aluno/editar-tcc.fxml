    <!-- CENTRO -->
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background: transparent;">
            <content>
                <VBox spacing="25">
                    <padding>
                        <Insets left="30" right="30" top="30" bottom="30"/>
                    </padding>

                    <!-- TÍTULO -->
                    <Label text="Editar TCC"
                           style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #0F1D45;" />

                    <!-- CARD DE EDIÇÃO -->
                    <VBox spacing="20"
                          style="-fx-background-color: white; -fx-background-radius: 12; -fx-padding: 25;">
                        <effect>
                            <DropShadow radius="12" color="#00000030" offsetY="3"/>
                        </effect>

                        <!-- TÍTULO -->
                        <Label text="Título do TCC" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
                        <TextField fx:id="campoTitulo" promptText="Digite o novo título"
                                   style="-fx-background-radius: 6; -fx-border-radius: 6; -fx-border-color: #BDC3C7;" />

                        <!-- RESUMO -->
                        <Label text="Resumo" style="-fx-font-size: 15px; -fx-font-weight: bold;" />
                        <TextArea fx:id="campoResumo" prefHeight="150"
                                  promptText="Atualize o resumo do TCC"
                                  wrapText="true"
                                  style="-fx-background-radius: 6; -fx-border-color: #BDC3C7; -fx-border-radius: 6;" />

                        <!-- BOTÃO SALVAR -->
                        <HBox alignment="CENTER_RIGHT">
                            <padding>
                                <Insets top="10" right="10" bottom="10" left="10"/>
                            </padding>

                            <Button text="Salvar Alterações"
                                    fx:id="btnSalvar"
                                    onAction="#salvarAlteracoes"
                                    style="-fx-background-color: #0F1D45; -fx-text-fill: white; 
                                           -fx-background-radius: 6; -fx-padding: 10 25; 
                                           -fx-font-weight: bold; -fx-font-size: 14px;" />
                        </HBox>

                    </VBox>

                </VBox>
            </content>
        </ScrollPane>
    </center>

